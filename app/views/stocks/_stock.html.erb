<section>
  <% stock_obj = Stock.find_by(ticker: stock.symbol.upcase) %>
  <h3>
    <%= link_to "#{stock.name}(#{stock.symbol.upcase})", portfolio_path(stock_obj) %>
    <span> <%= link_to("X", portfolio_path(stock_obj), method: :delete) %> </span>
  </h3>
  <p>
    <%= get_market_price(stock) %>
    <%= stock.change[0..4] %>
    (<%= stock.change_in_percent %>)
  </p>
  <p>
    Range: <%= stock.days_range %>
    <%= stock.weeks_range_52 %>
    <%= stock.open %>
    <%= stock.volume %>
    <%= stock.average_daily_volume %>
    <%= stock.market_capitalization %>
    <%= stock.pe_ratio %>
  </p>
  <p>
    <%= stock.dividend_per_share %>
    <%= stock.dividend_yield %>
    <%= stock.earnings_per_share %>
    <%= stock.float_shares %>
    <%= stock.ebitda %>
    <%= stock.short_ratio %>
  </p>
</section>