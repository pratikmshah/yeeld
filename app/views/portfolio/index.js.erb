$parent = $('#stocks-container').parent();                    // grab parent to append to
$refresh = $('#refresh span.glyphicon-refresh');

$('#stocks-container').remove();                              // remove contents
$refresh.addClass('gly-spin').delay(500).queue(function() {  // animation
  $refresh.removeClass('gly-spin');
  $refresh.dequeue();
}, 2000);
$parent.append( '<%= j render "portfolio", portfolio: @portfolio %>' );
$('.del-stock').toggle();