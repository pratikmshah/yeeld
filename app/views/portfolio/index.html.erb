<h1>Your Portfolio</h1>

<div>
  <%= form_for @stock do |f| %>
    <%= f.text_field :ticker, placeholder: "Ticker, Symbol" %>
    <%= f.submit "Add stock" %>
  <% end %>
</div>

<div>
  <% stock_data = stock_info(@portfolio) %>
  <% stock_data.each do |data| %>
    <section>
      <h3><%= data.name %>(<%= data.symbol.upcase %>)</h3>
      <p>
        <%= get_market_price(data) %>
        <%= data.change[0..4] %>
        (<%= data.change_in_percent %>)
      </p>
      <p>
        <%= data.days_range %>
        <%= data.weeks_range_52 %>
        <%= data.open %>
        <%= data.volume %>
        <%= data.average_daily_volume %>
        <%= data.market_capitalization %>
        <%= data.pe_ratio %>
      </p>
      <p>
        <%= data.dividend_per_share %>
        <%= data.dividend_yield %>
        <%= data.earnings_per_share %>
        <%= data.float_shares %>
        <%= data.ebitda %>
        <%= data.short_ratio %>
      </p>
    </section>
  <% end %>
</div>