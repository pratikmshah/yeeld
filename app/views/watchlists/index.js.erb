$parent = $('#watchlist').parent();                    // grab parent to append to

$('#watchlist').remove();                              // remove contents
$parent.append( '<%= j render "watchlist", watchlist: @watchlist %>' );

$refresh = $('#refresh-watch');
$refresh.addClass('gly-spin').delay(1000).queue(function() {  // animation
  $refresh.removeClass('gly-spin');
  $refresh.dequeue();
}, 1000);